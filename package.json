{
  "name": "mcp-debugger",
  "version": "0.1.0",
  "description": "Run-time step-through debugging for LLM agents.",
  "homepage": "https://github.com/your-repo/debug-mcp-server",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/debug-mcp-server.git"
  },
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "docker-build": "docker build . -t debug-mcp-server:local",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "postbuild": "node -e \"require('fs-extra').copySync('src/proxy/proxy-bootstrap.js', 'dist/proxy/proxy-bootstrap.js', { overwrite: true })\"",
    "prepare": "npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "dap",
    "debugger",
    "debugging",
    "llm",
    "ai-agent",
    "debugpy",
    "step-through",
    "python"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-repo/debug-mcp-server/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "mcp-debugger": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "commander": "^11.1.0",
    "debug": "^4.3.4",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@microsoft/fetch-event-source": "^2.0.1",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-istanbul": "^1.6.1",
    "@vitest/coverage-v8": "^1.2.0",
    "@vscode/debugadapter-testsupport": "^1.68.0",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "fetch-mock": "^12.5.2",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.32.1",
    "vitest": "^1.2.0"
  }
}
